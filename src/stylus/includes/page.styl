transition-props = right 0.3s ease-out

.page-container
  overflow hidden

.page
  background #fff
  width 100%
  height 100%
  position absolute
  top 0
  z-index 2
  border-right 1px solid #666
  overflow-y scroll

.page-leave
  right 0

.page-leave.page-leave-active
  right 100%
  transition transition-props

.page-enter
  right 100%

.page-enter.page-enter-active
  right 0
  transition transition-props